<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppTheme" parent="android:Theme.NoTitleBar" >
<!-- <item name="android:windowBackground">@null</item> -->
	</style>
        
    <style name="TabletButton" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:background">@drawable/parchment_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PhoneButton" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:background">@drawable/parchment_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogButton" parent="android:Widget.TextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/parchment_button_background_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        </style>

    <style name="header_text_tablet" parent="@android:style/TextAppearance">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="body_text_tablet" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="header_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="dialog_message_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
